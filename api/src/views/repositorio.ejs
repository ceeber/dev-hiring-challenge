           
        <div class="row">
          <div class="col-md-3 mb-2">

           <form action="/all" method="POST">                       
             <input type="text" class="form-control" id="pagina" name="pagina" placeholder="Página de pesquisa">           
          </div>
          
          <button type="submit" class="btn btn-primary" id="pesquisa">Pesquisa repositórios</button>
          
          <%if (locals.page) { %>
            &nbsp;<strong>Página de pesquisa: </strong> &nbsp;[ <%= page %> ]
          <% }; %>
          
           </form>
        </div>
        
        <br/><br/>
           
            <%if (locals.git) { %>
              <table class="table table-striped"><thead>
                <tr>
                  <th>CODIGO</th>
                  <th>NOME</th>
                  <th>LINGUAGEM</th>                  
                  <th>INFORMAÇÃO</th>                                 
                </tr>
              </thead>
              <tbody>
                <tr>
              
            <% git.forEach(function(git) { %>
                
                        <td><%= git.id %></td>
                        <td><a class="btn btn-outline-success" id="pesquisa" href="<%= git.html_url %>" target="_blank"><%= git.full_name %></a></td>
                        <td><strong><%= git.language %></strong></td>
                        <td><%= git.description %> </td>                        
                    </tr>
            <% })}; %>
                </tbody>
            </table>

    </div>

